{
    "name": "alexskrypnyk/shell-var-lint",
    "type": "library",
    "description": "Lint and fix shell vars to ${VAR} format.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/alexskrypnyk/shell-var-lint",
    "support": {
        "issues": "https://github.com/alexskrypnyk/shell-var-lint/issues",
        "source": "https://github.com/alexskrypnyk/shell-var-lint"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drupal/coder": "^8.3",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10"
    },
    "autoload-dev": {
        "classmap": [
            "tests/phpunit/unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpmd --exclude vendor,node_modules . text phpmd.xml",
            "phpstan"
        ],
        "lint:fix": "phpcbf",
        "test": "phpunit --no-coverage",
        "test:coverage": "XDEBUG_MODE=coverage phpunit"
    },
    "bin": [
        "shell-var-lint"
    ]
}
